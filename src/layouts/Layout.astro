---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="png" href="/lasse.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

* {
  font-family: 'Poppins', sans-serif;
}

body {
  @apply bg-zinc-900 container mx-auto py-12 p-4 text-white;
}

a {
  @apply text-lime-500 hover:text-lime-300 hover:underline transition-all;
}

p {
  @apply text-zinc-500;
}

button {
  @apply bg-lime-500 hover:bg-lime-400 text-zinc-900 px-4 py-2 rounded-md;
}
</style>
